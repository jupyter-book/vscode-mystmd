{
  "name": "myst",
  "displayName": "mystmd-syntax",
  "description": "MyST Markdown Syntax support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": "myst.yml",
        "url": "./schemas/myst-schema.json"
      }
    ],
    "languages": [
      {
        "id": "myst",
        "aliases": [
          "MyST Markdown",
          "myst"
        ],
        "extensions": [
          ".myst",
          ".md"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "myst-frontmatter",
        "aliases": [
          "MyST Frontmatter"
        ],
        "extensions": [],
        "filenames": [],
        "configuration": "./language/myst-frontmatter-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "myst",
        "scopeName": "text.mystmarkdown",
        "path": "./syntaxes/myst.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ]
  },
  "main": "./dist/index.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "tsc",
    "dev": "tsc -watch -p ./",
    "lint": "eslint \"src/**/!(*.spec).ts\" -c ./.eslintrc.cjs",
    "lint:format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/vscode": "^1.94.0",
    "eslint-config-curvenote": "^0.0.4",
    "js-yaml": "^4.1.0",
    "typescript": "^5.6.2",
    "vscode": "^1.1.37"
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ]
}
